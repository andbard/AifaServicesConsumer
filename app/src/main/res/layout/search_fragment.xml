<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.SearchView
        android:id="@+id/search_fragment_filter_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="filter..."
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary">
    </android.support.v7.widget.SearchView>
    <!--<EditText
        android:id="@+id/search_fragment_filter_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="filter..."/>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_fragment_results"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_fragment_filter_sv">
    </android.support.v7.widget.RecyclerView>
    <ProgressBar
        android:id="@+id/search_fragment_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/search_fragment_empty_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No items"
        android:textSize="24sp"
        android:gravity="center"
        android:visibility="gone"/>
    
</RelativeLayout>